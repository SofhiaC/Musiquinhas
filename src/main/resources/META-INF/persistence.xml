<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             version="3.1">

    <persistence-unit name="_musiquinhasPU" transaction-type="RESOURCE_LOCAL">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>entities.Usuario</class>
        <class>entities.Musica</class>
        <class>entities.Avaliacao</class>
        <class>entities.Playlist</class>
        <class>entities.MontagemPlaylist</class>
        <class>entities.Assinatura</class>


        <properties>
            <!-- DRIVER MYSQL -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>

            <!-- URL DO BANCO -->
            <property name="jakarta.persistence.jdbc.url"  
                      value="jdbc:mysql://127.0.0.1:3306/musiquinhas?useSSL=false&amp;serverTimezone=UTC"/>

            <!-- CREDENCIAIS -->
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="senha"/>

            <!-- DDL -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- LOG SQL (opcional) -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
